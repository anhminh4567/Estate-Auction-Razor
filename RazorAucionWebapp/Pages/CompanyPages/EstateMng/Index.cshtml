@page
@model RazorAucionWebapp.Pages.CompanyPages.EstateMng.IndexModel

@{
    ViewData["Title"] = "Index";
}

<div class="container">

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">Home</li>
            <li class="breadcrumb-item">Company account</li>
            <li class="breadcrumb-item"><a href="#">My estates</a></li>
        </ol>
    </nav>

    <h4>My estates</h4>

    <p>
        <a asp-page="./Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Estates[0].Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estates[0].Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estates[0].Width)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estates[0].Length)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estates[0].Area)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estates[0].Floor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estates[0].Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Estates)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Width)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Length)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Area)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Floor)
                    </td>
                    <td class="text-danger">
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @*<a asp-page="./Update" asp-route-id="@item.EstateId">Edit</a> |*@
                        <a class="btn btn-secondary" asp-page="./Detail" asp-route-id="@item.EstateId">Details</a> |
                        <a class="btn btn-danger" asp-page="./Delete" asp-route-id="@item.EstateId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

