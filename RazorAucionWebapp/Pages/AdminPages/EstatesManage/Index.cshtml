@page
@model IndexModel

@{
    ViewData["Title"] = "Estate";
}

<style>
    .estate-table-container {
        background-color: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .estate-table-container h1 {
        margin-bottom: 20px;
    }

    .estate-table-container a {
        color: #007bff;
        text-decoration: none;
        margin-right: 10px;
    }

    .estate-table-container a:hover {
        text-decoration: underline;
    }

    .estate-table-container table {
        width: 100%;
    }

    .estate-table-container th {
        background-color: #343a40;
        color: #ffffff;
    }

    .estate-table-container td, .estate-table-container th {
        padding: 12px;
        text-align: left;
        border: 1px solid #dee2e6;
    }

    .estate-table-container tbody tr:nth-child(even) {
        background-color: #f2f2f2;
    }
</style>

<div class="estate-table-container">
    <h1>Estate Management</h1>
    <p>
        <a asp-page="/AdminPages/EstateCategories/Index">Categories</a>
    </p>
    <table>
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Company)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Status)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Description)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Width)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Length)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Area)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Floor)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Location)</th>
                <th>@Html.DisplayNameFor(model => model.Estate[0].Coordinate)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model.Estate) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Company.CMND)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>@Html.DisplayFor(modelItem => item.Width)</td>
                <td>@Html.DisplayFor(modelItem => item.Length)</td>
                <td>@Html.DisplayFor(modelItem => item.Area)</td>
                <td>@Html.DisplayFor(modelItem => item.Floor)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Coordinate)</td>
                <td>
    @*                <a asp-page="./Update" asp-route-id="@item.EstateId">Edit</a> |
    *@                <a asp-page="./AuctionsManage/Index" asp-route-estateId="@item.EstateId">View Auctions</a> |
                    <a asp-page="./Delete" asp-route-id="@item.EstateId">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
</div>
